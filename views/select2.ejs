<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Show message</title>
</head>
<body>
  <h2>モンスター詳細</h2>
  <h3>剥ぎ取り</h3>
  <table border="1">
    <tr>
      <th>アイテム名 </th>
      <th>ドロップ率　</th>
    </tr> 
      <% for( let row of data ) { %>
        <tr>
            <td><%= row.strippingname %></td>
            <td><%= row.dropratio %></td>
        </tr>
      <% } %>
  </table>
  <h3>落とし物</h3>
  <table border="1">
     <tr>
      <th>アイテム名 </th>
      <th>ドロップ率　</th>
    </tr> 
      <% for( let row of data ) { %>
        <tr>
            <td><%= row.lostitemname %></td>
            <td><%= row.dropratio %></td>
        </tr>
      <% } %>
    
  </table>
</body>
</html>